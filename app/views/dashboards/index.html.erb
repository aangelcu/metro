<%= form_tag root_path, method: :get do %>

  <p>
  	<%= label_tag("From") %>
    <%= date_field(:user, :from) %>
  </p>

  <p>
    <%= label_tag("To") %>
    <%= date_field(:user, :to) %>
  </p>

	<p>
		<%= label_tag("Mercado") %>
		<select name="post[category]">
		  <option>Venta</option>
		  <option>Alquiler</option>
		</select>
	</p>

	<p>
		<%= label_tag("Tipo_de_Propiedad") %>
		<%= collection_select :property, :property_type_id, PropertyType.all,:id,:type %>
	</p>

	<p>
		<%= label_tag("Departamento") %>
		<%= collection_select :state, :state_id, State.all,:id,:name %>
	</p>

		<p>
		<%= label_tag("Estrato") %>
		<%= collection_select :stratus, :stratus, Property.select('stratus').uniq,:id,:stratus %>
	</p>

		<p>
		<%= label_tag("Area_Construida") %>
		<%= collection_select :built_area, :built_area, Property.select('built_area').uniq,:id,:built_area %>
	</p>
 
  <p>
    <%= submit_tag("Submit") %>
  </p>
<% end %>